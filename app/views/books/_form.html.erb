<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :ISBN %>
    <%= form.text_field :isbn, id: :book_isbn %>
  </div>

  <div class="field">
    <%= form.label :書籍名 %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label :価格 %>
    <%= form.number_field :price, id: :book_price %>
  </div>

  <div class="field">
    <%= form.label :出版社 %>
    <%= form.text_field :publish, id: :book_publish %>
  </div>

  <div class="field">
    <%= form.label :出版日 %>
    <%= form.date_select :published, id: :book_published %>
  </div>

  <div class="field">
    <%= form.label :添付品 %>
    <%= form.check_box :cd, id: :book_cd %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
